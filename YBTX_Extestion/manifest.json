{
    "manifest_version": 2,
    "name": "一表同享",
    "version": "1.0",

    "description": "一表同享",
	
	"permissions": [
		"http://10.8.52.17:8088/*",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"nativeMessaging"
	],
	
	"background": {
		"scripts": ["jquery-3.6.min.js", "bg.js"],
		"persistent": true
	},
	
    "content_scripts": [
		{
            "matches": ["http://10.8.52.17:8088/*"],
            "run_at": "document_start",
            "js": ["jquery-3.6.min.js", "my-hook-json.js"],
			"all_frames" : true
        },
		{
            "matches": ["http://10.8.52.17:8088/*"],
            "run_at": "document_end",
            "js": ["fiddler-script.js"],
			"all_frames" : true
        }
    ],

	"web_accessible_resources": ["jquery-3.6.min.js", "ajax-hook.js", "mybase64.js", "my-hook-json-inject.js"]
}