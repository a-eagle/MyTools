{
    "manifest_version": 2,
    "name": "一表统享",
    "version": "1.0",

    "description": "一表统享",
	
	"permissions": [
		"<all_urls>",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"nativeMessaging",
		"activeTab"
	],
	
	"background": {
		"scripts": ["jquery-3.6.min.js", "bg.js"],
		"persistent": true
	},
	
    "content_scripts": [
		{
            "matches": ["http://10.8.52.17:8088/*"],
            "run_at": "document_end",
            "js": ["jquery-3.6.min.js", "content.js"],
			"all_frames" : true
        }
    ],

	"web_accessible_resources": ["jquery-3.6.min.js",  "inject.js", "chunk.app.js", "ajax-hook.js", "chunk.libs.js"]
}