{
    "manifest_version": 2,
    "name": "RecordFiles",
    "version": "1.0",

    "description": "下载网页",
	
	"permissions": [
		"<all_urls>",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"nativeMessaging"
	],
	
	"background": {
		"scripts": ["jquery-3.6.min.js", "bg.js"],
		"persistent": true
	},
	
    "content_scripts": [
		{
            "matches": ["<all_urls>"],
            "run_at": "document_start",
            "js": ["jquery-3.6.min.js", "document_start.js"],
			"all_frames" : true
        },
		{
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": ["jquery-3.6.min.js", "document_end.js"],
			"all_frames" : true
        }
    ],

	"web_accessible_resources": ["jquery-3.6.min.js", "ajax-hook.js", "mybase64.js", "ajax-hook-inject.js"]
}